<div class='row'>
  <div class='span0 well text-center'>
    <% if current_user %>
        <%= link_to vote_post_path(post, vote: true), method: post do %>
            <i class="icon-arrow-up"></i>
            <% end %>
    <br/>
    <% end %>
    vote<br/>(<%= post.total_votes %> of <%= post.votes.size %>)<br/>
    <% if current_user %>
        <%= link_to vote_post_path(post, vote: false), method: post do %>
            <i class="icon-arrow-down"></i>
            <% end %>
    <% end %>
  </div>

  <div class="span8 well">
    <%= render post.categories %>
    <h4><%= link_to post.title, post.url %>
      <% if logged_in? %>
          (<%= link_to 'Edit', edit_post_path(post) %>)
      <% end %>
    </h4>

    <p><%= post.description %></p>

    <p>
      <span class="quiet">posted by <%= link_to post.user.username, user_path(post.user) %></span>
      <small>posted on <%= nice_date(post.created_at) %> or <%= post.nice_created_at_date %>
      </small>
    </p>
    <small>
                  <span>
          <%= link_to("#{post.comments.size} comments", post_path(post)) %>
        </span>

    </small>

  </div>

</div>