
<h4>You are viewing post: <%= link_to @post.title, fix_url(@post.url) %></#></h4>
<%= link_to "All Posts", posts_path %>

<p>

<%= render @post.categories %>
</p>

<%= render 'shared/content_title', title: @post.title %>



<p>
<%= @post.description %>

</p>

<hr/>
<% if logged_in? %>
<h5>Create Comments:</h5>
<%= form_for [@post, @comment] do |f| %> <!-- because URL is posts/id/comments

    <!--error display on return to new -->
    <%= render 'shared/error_check_message', data: @comment %>

    <%= f.text_area :body, rows: 3, class: 'span4' %>
    <br />
    <%= f.submit "Create Comment", class: "btn btn-primary" %>
<% end %>
<% end %>
<h5>Comments:</h5>

<% @post.comments.each do |one_comment| %>
  <div class="well span8">
    <em>"<%= one_comment.body %>"</em>
    <br />
    <span class="quiet">posted by <%= link_to one_comment.user.username, '' %></span>
    <small>posted on <%= nice_date(one_comment.created_at) %>
    </small>

  </div>
<% end %>

<hr/>

